<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@color/grey_5"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_medium"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_medium">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_middle"
        android:scrollbarSize="2dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hike_image_1"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_1" />

            <ImageView
                android:id="@+id/hike_image_2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_2" />

            <ImageView
                android:id="@+id/hike_image_3"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_3" />

            <ImageView
                android:id="@+id/hike_image_4"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_4" />

            <ImageView
                android:id="@+id/hike_image_5"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_5" />
            <ImageView
                android:id="@+id/hike_image_6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_6" />
            <ImageView
                android:id="@+id/hike_image_7"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_7" />
            <ImageView
                android:id="@+id/hike_image_8"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_8" />
            <ImageView
                android:id="@+id/hike_image_9"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_9" />
            <ImageView
                android:id="@+id/hike_image_10"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginEnd="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_medium"
                android:scaleType="centerCrop"
                android:src="@drawable/hike_image_10" />

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>